<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:contentPadding="6dp">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <!-- android:background="@drawable/grids"-->



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sample_papers_name_of_quiz"
            android:layout_gravity="left"
            android:gravity="left"
            android:text="Quiz"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sample_papers_name_of_subject"
            android:layout_gravity="left"
            android:gravity="left"
            android:text="Subject_name"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/sample_papers_linear_layout_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sample_papers_discription"
                android:layout_gravity="left"
                android:gravity="left"
                android:maxLines="1"
                android:text="discription"
                android:layout_weight="1"
                />


            <TextView
                android:id="@+id/sample_papers_view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:layout_margin="10dp"
                android:text="View More"
                android:textColor="@color/colorPrimary"

                />
        </LinearLayout>




        <ImageView
            android:id="@+id/sample_papers_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/sample_papers_view_or_read_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/colorAccent"/>

    </LinearLayout>
</android.support.v7.widget.CardView>