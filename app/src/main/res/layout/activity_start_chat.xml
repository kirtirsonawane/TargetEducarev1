<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/linear_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <include layout="@layout/toolbar"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/token_start"
                android:textSize="16dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:gravity="center"
                android:padding="5dp"
                android:text="token"
                android:layout_margin="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reopen_token"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_gravity="right|center"
                    android:gravity="right|center"
                    android:text="Reopen"
                    android:padding="8dp"
                    android:background="@drawable/border_for_token_list_yellow"
                    android:visibility="gone"
                    android:layout_margin="8dp"/>/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/token_title"
                android:textSize="16dp"

                android:textStyle="bold"
                android:layout_gravity="left"
                android:gravity="center"
                android:padding="5dp"
                android:text="Title : "
                android:layout_margin="5dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_chat_start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:padding="2dp"></android.support.v7.widget.RecyclerView>

        </android.support.v7.widget.LinearLayoutCompat>


        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/linear"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:layout_margin="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <ImageView
                    android:id="@+id/attach_start_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                  android:layout_margin="5dp"

                    android:src="@android:drawable/ic_menu_add"  />



            <EditText
                android:id="@+id/edit_text_chat_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
               android:minLines="2"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:maxLines="4"
                android:background="@drawable/textviewbackground"

                />


                <ImageView
                    android:id="@+id/send_chat_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="3dp"
                    android:src="@android:drawable/ic_menu_send" />



            <!--<ImageView
                android:id="@+id/send_chat_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="30dp"

                android:src="@drawable/ic_send" />-->
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.LinearLayoutCompat>
</RelativeLayout>