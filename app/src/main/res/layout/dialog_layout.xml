<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_layout_xml"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_layout_hori_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:paddingLeft="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/textview_dialog_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="2dp"
            android:paddingLeft="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


        <ImageView
            android:id="@+id/dialog_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right|end"

            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="5dp"
            android:scaleType="fitEnd"
            android:src="@drawable/close_dialog_one" />


        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_dialog_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="left"
            android:gravity="right"/>
    -->


    </LinearLayout>

    <TextView
        android:id="@+id/textview_dialog_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="10dp"
        android:layout_marginTop="6dp"

        android:gravity="left"
        android:paddingLeft="6dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <WebView
        android:id="@+id/webview_dialog_discription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:layout_weight="1"
        android:padding="2dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"></WebView>

    <!--    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_dialog_discription"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_margin="5dp"
            android:padding="2dp"/>-->


</LinearLayout>
