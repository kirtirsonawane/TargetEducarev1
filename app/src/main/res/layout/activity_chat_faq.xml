<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/white"

 >

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/white">

            <include layout="@layout/toolbar"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_of_filter"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:padding="5dp">


                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/chat_show_filter_pending"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="center|center_vertical"

                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Pending"
                    android:background="@drawable/unchecked_token_list"
                    android:textColor="@color/Black"
                    android:layout_margin="5dp"
                    />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/chat_show_filter_confirm"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:padding="5dp"
                    android:text="Resolved"
                    android:layout_weight="1"
                    android:background="@drawable/unchecked_token_list_green"
                    android:textColor="@color/Black"
                    android:layout_margin="5dp"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/chat_show_filter_cancelled"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="center|center_vertical"

                    android:padding="5dp"
                    android:layout_weight="1"
                    android:text="Cancelled"
                    android:background="@drawable/unchecked_token_list_red"
                    android:textColor="@color/Black"
                    android:layout_margin="5dp"
                    />

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"

                android:padding="2dp"></android.support.v7.widget.RecyclerView>

        </android.support.v7.widget.LinearLayoutCompat>

<!--<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp">-->
        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/linear"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:layout_margin="2dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/attach_chat"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"


        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"

        android:src="@android:drawable/ic_menu_add" />


            <EditText
                android:id="@+id/edit_text_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:minLines="2"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/textviewbackground"
                android:maxLines="4"


                />

            <ImageView
                android:id="@+id/send_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="3dp"
                android:src="@android:drawable/ic_menu_send" />
</LinearLayout>
        </RelativeLayout>

<!--</android.support.v7.widget.CardView>-->
    </android.support.v7.widget.LinearLayoutCompat>
</RelativeLayout>