<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/chat_faq_relative_layout">
<!--<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

   >-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:padding="2dp"

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_show_token1"

            android:padding="1dp"
            android:text="token"

            android:textColor="@color/Black"
            android:layout_margin="5dp"
            android:layout_gravity="left"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/chat_show_updateddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal|right|end"
            android:layout_margin="5dp"
            android:gravity="center_horizontal|right|end"
            android:padding="1dp"

            android:text="Update"
            android:textColor="@color/Black" />
        <TextView
            android:id="@+id/chat_show_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|end"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="right|end"
            android:padding="1dp"
            android:text="date"
            android:textColor="@color/Black" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:background="@drawable/border_for_list_yellow"

            android:layout_margin="2dp"
            android:id="@+id/linear_layout_chat_status"

            >

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/chat_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_send" />
        </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:id="@+id/linearclick"

                >

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_show_msg"
                android:layout_gravity="left"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:padding="1dp"
            android:text="text"
            android:layout_weight="1"
            android:textColor="@color/Black"
            android:layout_margin="1dp"
            />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="right"
    android:gravity="right"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_show_status"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:padding="2dp"

            android:textColor="@color/Black"
            android:layout_margin="2dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_show_chats"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            android:text="Chats"
            android:textColor="@color/Black"
            android:layout_margin="2dp"
            />
</LinearLayout>
            </LinearLayout>

